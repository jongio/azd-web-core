---
export interface CtaButton {
  label: string;
  href: string;
}

/** Hero section with gradient glow background and primary/secondary CTA buttons. */
export interface Props {
  title: string;
  subtitle?: string;
  primaryCta?: CtaButton;
  secondaryCta?: CtaButton;
}

const { title, subtitle, primaryCta, secondaryCta } = Astro.props;
---

<section class="relative overflow-hidden px-[var(--space-6)] py-[var(--space-20)] text-center">
  <!-- Background glow -->
  <div
    class="pointer-events-none absolute inset-0"
    style="background: radial-gradient(ellipse 60% 50% at 50% 40%, color-mix(in srgb, var(--color-primary) 8%, transparent), transparent);"
    aria-hidden="true"
  ></div>

  <div class="relative mx-auto max-w-3xl">
    <h1
      class="mb-[var(--space-4)] font-bold leading-tight"
      style="font-size: var(--text-3xl);"
    >
      <Fragment set:html={title} />
    </h1>

    {subtitle && (
      <p
        class="mx-auto mb-[var(--space-8)] max-w-2xl text-lg leading-relaxed"
        style="color: var(--color-text-muted); font-size: var(--text-base);"
      >
        {subtitle}
      </p>
    )}

    {(primaryCta || secondaryCta) && (
      <div class="flex flex-wrap items-center justify-center gap-[var(--space-4)]">
        {primaryCta && (
          <a
            href={primaryCta.href}
            class="cta-primary inline-flex items-center rounded-[var(--radius-md)] px-6 py-3 text-sm font-semibold transition-[background,filter] duration-200 hover:no-underline hover:brightness-110"
            style="background: linear-gradient(135deg, var(--color-primary), var(--color-accent)); color: #ffffff !important; box-shadow: 0 0 20px color-mix(in srgb, var(--color-primary) 30%, transparent);"
          >
            {primaryCta.label}
          </a>
        )}
        {secondaryCta && (
          <a
            href={secondaryCta.href}
            class="inline-flex items-center rounded-[var(--radius-md)] border px-6 py-3 text-sm font-semibold transition-[color,border-color,background-color] duration-200 hover:no-underline"
            style="border-color: var(--color-border); color: var(--color-text);"
          >
            {secondaryCta.label}
          </a>
        )}
      </div>
    )}
  </div>
</section>

<style>
  :global(.gradient-text) {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
