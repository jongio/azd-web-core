---
/** Shared footer with extension branding, social links, resources, and community links. */
export interface Props {
  extensionName: string;
  githubUrl: string;
  hubUrl?: string;
}

const { extensionName, githubUrl, hubUrl } = Astro.props;
const year = new Date().getFullYear();
---

<footer
  class="border-t mt-[var(--space-16)]"
  style="border-color: var(--color-border); background-color: var(--color-surface);"
>
  <div class="mx-auto grid max-w-[1280px] gap-[var(--space-8)] px-[var(--space-6)] py-[var(--space-12)] sm:grid-cols-2 lg:grid-cols-3">
    <!-- Column 1: About -->
    <div>
      <div class="mb-[var(--space-3)] flex items-center gap-[var(--space-2)]">
        <svg aria-hidden="true" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--color-primary);">
          <polyline points="4 17 10 11 4 5" />
          <line x1="12" y1="19" x2="20" y2="19" />
        </svg>
        <span class="font-bold" style="color: var(--color-text);">azd {extensionName}</span>
      </div>
      <p class="mb-[var(--space-4)] text-sm" style="color: var(--color-text-muted);">
        A shared component of the Azure Developer CLI extension ecosystem.
      </p>
      {hubUrl && (
        <a
          href={hubUrl}
          class="inline-flex items-center gap-1 rounded-[var(--radius-md)] px-3 py-1.5 text-xs font-semibold transition-colors"
          style="background-color: var(--color-surface-2); color: var(--color-primary); border: 1px solid var(--color-border);"
        >
          Part of the jongio collection of azd extensions â†’
        </a>
      )}
      <div class="mt-[var(--space-4)] flex items-center gap-[var(--space-3)]">
        <a href="https://x.com/jongallant" target="_blank" rel="noopener noreferrer" aria-label="Jon Gallant on X" class="social-link min-h-[44px] min-w-[44px] inline-flex items-center justify-center transition-colors">
          <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <a href="https://www.linkedin.com/in/jongallant/" target="_blank" rel="noopener noreferrer" aria-label="Jon Gallant on LinkedIn" class="social-link min-h-[44px] min-w-[44px] inline-flex items-center justify-center transition-colors">
          <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
        <a href={githubUrl} target="_blank" rel="noopener noreferrer" aria-label="GitHub repository" class="social-link min-h-[44px] min-w-[44px] inline-flex items-center justify-center transition-colors">
          <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        </a>
      </div>
    </div>

    <!-- Column 2: Resources -->
    <div>
      <h4 class="mb-[var(--space-3)] text-sm font-semibold" style="color: var(--color-text);">Resources</h4>
      <ul class="flex flex-col gap-[var(--space-2)]">
        <li><a href={`${githubUrl}#readme`} class="text-sm" style="color: var(--color-text-muted);">Documentation</a></li>
        <li><a href={githubUrl} target="_blank" rel="noopener noreferrer" class="text-sm" style="color: var(--color-text-muted);">GitHub</a></li>
        <li><a href={`${githubUrl}/blob/main/CHANGELOG.md`} class="text-sm" style="color: var(--color-text-muted);">Changelog</a></li>
      </ul>
    </div>

    <!-- Column 3: Community -->
    <div>
      <h4 class="mb-[var(--space-3)] text-sm font-semibold" style="color: var(--color-text);">Community</h4>
      <ul class="flex flex-col gap-[var(--space-2)]">
        <li><a href={`${githubUrl}/issues`} target="_blank" rel="noopener noreferrer" class="text-sm" style="color: var(--color-text-muted);">Issues</a></li>
        <li><a href={`${githubUrl}/blob/main/CONTRIBUTING.md`} class="text-sm" style="color: var(--color-text-muted);">Contributing</a></li>
      </ul>
    </div>
  </div>

  <!-- Bottom bar -->
  <div
    class="border-t px-[var(--space-6)] py-[var(--space-4)] text-center text-xs"
    style="border-color: var(--color-border); color: var(--color-text-muted);"
  >
    MIT License &middot; &copy; {year} azd {extensionName}
  </div>
</footer>

<style>
  .social-link {
    color: var(--color-text-muted);
  }
  .social-link:hover {
    color: var(--color-text);
  }
</style>
