---
export interface NavLink {
  label: string;
  href: string;
  badge?: string;
}

/** Shared sticky header with navigation, theme toggle, and GitHub pill link. */
export interface Props {
  extensionName: string;
  navLinks?: NavLink[];
  githubUrl: string;
  hubUrl?: string;
}

import ThemeToggle from "./ThemeToggle.astro";

const { extensionName, navLinks = [], githubUrl, hubUrl } = Astro.props;
---

<header
  class="sticky top-0 z-[var(--z-header)] border-b backdrop-blur"
  style="background-color: color-mix(in srgb, var(--color-surface) 85%, transparent); border-color: var(--color-border);"
>
  <div class="mx-auto flex max-w-[1280px] items-center justify-between px-[var(--space-6)] py-[var(--space-3)]">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-[var(--space-2)] no-underline" style="text-decoration:none;">
      <!-- Terminal icon -->
      <svg aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--color-primary);">
        <polyline points="4 17 10 11 4 5" />
        <line x1="12" y1="19" x2="20" y2="19" />
      </svg>
      <span class="text-lg font-bold" style="color: var(--color-text);">azd</span>
      <span class="text-lg font-semibold" style="color: var(--color-primary);">{extensionName}</span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden items-center gap-[var(--space-4)] md:flex" aria-label="Main navigation">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class="nav-link text-sm transition-colors hover:no-underline"
        >
          {link.label}
          {link.badge && (
            <span
              class="ml-1 inline-block rounded-[var(--radius-sm)] px-1.5 py-0.5 text-xs font-semibold"
              style="background-color: var(--color-surface-2); color: var(--color-primary);"
            >
              {link.badge}
            </span>
          )}
        </a>
      ))}

      <ThemeToggle />

      <a
        href="https://x.com/jongallant"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon flex h-11 w-11 items-center justify-center rounded-[var(--radius-md)] transition-colors"
        aria-label="Jon Gallant on X"
      >
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
      </a>

      <a
        href="https://www.linkedin.com/in/jongallant/"
        target="_blank"
        rel="noopener noreferrer"
        class="social-icon flex h-11 w-11 items-center justify-center rounded-[var(--radius-md)] transition-colors"
        aria-label="Jon Gallant on LinkedIn"
      >
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>

      <a
        href={githubUrl}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub repository"
        class="github-pill flex items-center gap-[var(--space-2)] rounded-[var(--radius-md)] px-3 py-1.5 text-sm font-medium transition-colors"
      >
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        GitHub
      </a>
    </nav>

    <!-- Mobile hamburger -->
    <button
      class="flex items-center md:hidden"
      style="color: var(--color-text-muted);"
      aria-label="Open navigation menu"
      aria-expanded="false"
      data-menu-toggle
    >
      <svg aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
        <line x1="3" y1="6" x2="21" y2="6" />
        <line x1="3" y1="12" x2="21" y2="12" />
        <line x1="3" y1="18" x2="21" y2="18" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <nav
    class="hidden flex-col gap-[var(--space-2)] border-t px-[var(--space-6)] py-[var(--space-4)] md:hidden"
    style="border-color: var(--color-border); background-color: var(--color-surface);"
    data-mobile-menu
    aria-label="Mobile navigation"
  >
    {navLinks.map((link) => (
      <a href={link.href} class="block py-1 text-sm" style="color: var(--color-text-muted);">
        {link.label}
        {link.badge && (
          <span
            class="ml-1 inline-block rounded-[var(--radius-sm)] px-1.5 py-0.5 text-xs font-semibold"
            style="background-color: var(--color-surface-2); color: var(--color-primary);"
          >
            {link.badge}
          </span>
        )}
      </a>
    ))}
    <div class="flex items-center gap-[var(--space-4)] pt-2">
      <ThemeToggle />
      <a href="https://x.com/jongallant" target="_blank" rel="noopener noreferrer" aria-label="Jon Gallant on X" class="social-icon flex h-11 w-11 items-center justify-center rounded-[var(--radius-md)] transition-colors">
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
      </a>
      <a href="https://www.linkedin.com/in/jongallant/" target="_blank" rel="noopener noreferrer" aria-label="Jon Gallant on LinkedIn" class="social-icon flex h-11 w-11 items-center justify-center rounded-[var(--radius-md)] transition-colors">
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
      </a>
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" aria-label="GitHub repository" class="github-pill flex items-center gap-[var(--space-2)] rounded-[var(--radius-md)] px-3 py-1.5 text-sm font-medium">
        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        GitHub
      </a>
    </div>
  </nav>

  <!-- Gradient accent line -->
  <div
    class="h-[2px] w-full"
    style="background: linear-gradient(to right, var(--color-primary), var(--color-accent));"
  ></div>
</header>

<script>
  const toggle = document.querySelector("[data-menu-toggle]");
  const menu = document.querySelector("[data-mobile-menu]");
  if (toggle && menu) {
    toggle.addEventListener("click", () => {
      const open = menu.classList.toggle("hidden");
      toggle.setAttribute("aria-expanded", String(!menu.classList.contains("hidden")));
      if (!menu.classList.contains("hidden")) {
        menu.classList.add("flex");
      } else {
        menu.classList.remove("flex");
      }
    });
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !menu.classList.contains("hidden")) {
        menu.classList.add("hidden");
        menu.classList.remove("flex");
        toggle.setAttribute("aria-expanded", "false");
        (toggle as HTMLElement).focus();
      }
    });
  }
</script>

<style>
  .nav-link {
    color: var(--color-text-muted);
  }
  .nav-link:hover {
    color: var(--color-text);
  }
  .social-icon {
    color: var(--color-text-muted);
  }
  .social-icon:hover {
    color: var(--color-text);
  }
  .github-pill {
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
  }
  .github-pill:hover {
    color: var(--color-text);
    border-color: var(--color-text-muted);
  }
</style>
